{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noNamespaceImport": "off",
        "noBarrelFile": "off"
      }
    }
  },
  "javascript": {
    "globals": ["Bun"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "extends": ["ultracite"],
  "files": {
    "experimentalScannerIgnores": ["apps/web/components/ui/**"]
  }
}
