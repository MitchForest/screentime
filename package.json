{
  "name": "screentime",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "apps/workers/*",
    "packages/*"
  ],
  "scripts": {
    "dev:edge": "bun run apps/edge-worker/dev.ts",
    "dev:web": "bun --cwd apps/web run dev",
    "build:web": "bun --cwd apps/web run build",
    "start:web": "bun --cwd apps/web run start",
    "dev:worker:correlator": "bun run apps/workers/correlator/src/index.ts",
    "dev:worker:aggregator": "bun run apps/workers/aggregator/src/index.ts",
    "dev:worker:retention": "bun run apps/workers/retention/src/index.ts",
    "lint": "ultracite check",
    "format": "ultracite fix",
    "check": "ultracite check",
    "typecheck": "tsc -p tsconfig.base.json --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "shadcn": "^3.2.1",
    "typescript": "^5.9.2",
    "ultracite": "5.3.3"
  }
}
